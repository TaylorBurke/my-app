{
  "include": [
    "./src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "DOM",
      "ES2016"
    ],
    "jsx": "preserve",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  }
}
